<div class="container" id="heading">
  <h1>Add Animal</h1>
</div>
<form id="animalForm" action="/animals" method="post"></form>
<div class=container>
<div class="mb-3">
  <label for="animalName" class="form-label">Animal Name</label>
  <input type="text" name="animalName" class="form-control" id="animalName" placeholder="Type animal name">
</div>

<div class="mb-3">
<label for="animalType" class="form-label">Animal Type</label>
  <select class="form-control">
  <option>Dog</option>
  <option>Cat</option>
  <option>Other</option>
</select>
</div>



<div class="mb-3">
<label for="animalBreed" class="form-label">Animal Breed</label>
 <input type="text" name="animalBreed" class="form-control" id="animalBreed" placeholder="Type animal breed">
</div>

