<form action="/login" method="post">
<div class="container">
  <div class="form-group m-4">
    <label for="exampleInputEmail1">Email address</label>
    <input type="email" class="form-control" id="email" name="username" aria-describedby="emailHelp" placeholder="Enter email">
  </div>

  <div class="form-group m-4">
    <label for="password">Password</label>
    <input type="password" class="form-control" id="password" name="password" placeholder="Password">
  </div>

    <div class="row justify-content-md-center">
        <div class="col text-center">
            <button type="submit" class="btn btn-secondary m-4">Submit</button>
        </div>

        <div class="col text-center">
            <a href="/signup">
                <button type="button" class="btn btn-primary m-4">Sign Up</button>
            </a>
        </div>
    </div>
</div>
</form>
