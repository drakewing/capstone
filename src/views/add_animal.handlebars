<link rel="stylesheet" href="/css/add_animal.css" type="text/css">

<div class="container" id="heading">
  <h1>Add Animal</h1>
</div>

<div class=container>
<div class="mb-3">
  <label for="animalName" class="form-label">Animal Name</label>
  <input type="text" class="form-control" id="animalName" placeholder="Type animal name">
</div>

<div class="mb-3">
<label for="animalType" class="form-label">Animal Type</label>
  <select class="form-control">
  <option>Dog</option>
  <option>Cat</option>
  <option>Other</option>
</select>
</div>


<div class="mb-3">
<label for="animalBreed" class="form-label">Animal Breed</label>
 <input type="text" class="form-control" id="animalName" placeholder="Type animal breed">
</div>

<div class="mb-3">
<label for="disposition" class="form-label">Disposition</label>
<div class="form-check">
  <input class="form-check-input" type="checkbox" value="" id="goodwithanimals">
  <label class="form-check-label" for="goodwithanimals">
    Good with other animals
  </label>
</div>
<div class="form-check">
  <input class="form-check-input" type="checkbox" value="" id="goodwithchildren" checked>
  <label class="form-check-label" for="goodwithchildren">
    Good with children
  </label>
</div>

<div class="form-check">
  <input class="form-check-input" type="checkbox" value="" id="leashed" checked>
  <label class="form-check-label" for="leashed">
    Animal must be leashed at all times
  </label>
</div>
</div>

<div class="mb-3">
<label for="animalBreed" class="form-label">Other Description</label>
 <input type="text" class="form-control" id="description" placeholder="Type other description">
</div>
<br>
<div class="d-flex flex-row-reverse">
    <button type="button" class="btn btn-primary">Submit Animal</button>
</div>

</div>


<script src="/js/add_animal.js"></script>