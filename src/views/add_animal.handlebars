<div class="mb-3">
<label for="age" class="form-label">Animal Age</label>
 <input type="text" name="age" class="form-control" id="age" placeholder="Type animal age">
</div>


<div class="mb-3">
<label for="disposition" class="form-label">Disposition</label>
<div class="form-check">
  <input class="form-check-input" type="checkbox" value="" name ="goodWithAnimals" id="goodWithAnimals">
  <label class="form-check-label" for="goodWithAnimals">
    Good with other animals
  </label>
</div>
<div class="form-check">
  <input class="form-check-input" type="checkbox" value="" name ="goodwithChildren" id="goodwithChildren">
  <label class="form-check-label" for="goodwithChildren">
    Good with children
  </label>
</div>

<div class="form-check">
  <input class="form-check-input" type="checkbox" value="" name="leadhed" id="leashed">
  <label class="form-check-label" for="leashed">
    Animal must be leashed at all times
  </label>
</div>
</div>


