<div class="container" id="heading">
  <h1>Add Animal</h1>
</div>

<div class=container>
<div class="mb-3">
  <label for="animalName" class="form-label">Animal Name</label>
  <input type="text" class="form-control" id="animalName" placeholder="Type animal name">
</div>

<div class="mb-3">
<label for="animalType" class="form-label">Animal Type</label>
  <select class="form-control animal type">
  {{#each species}}
  <option>{{this}}</option>
  {{/each}}
</select>
</div>
